<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">
  <fo:layout-master-set>
    <fo:simple-page-master
      master-name="first"
      margin-right="1in"
      margin-left="1in"
      margin-bottom="1in"
      margin-top="1in"
      page-width="8in"
      page-height="11in">
      <fo:region-body></fo:region-body>
    </fo:simple-page-master>
  </fo:layout-master-set>
  <fo:page-sequence
    master-reference="first">
    <fo:flow flow-name="xsl-region-body" font-size="20pt">
      <fo:block>Test border-before-style property.  All tests with border-before-width="20pt", space-before="12pt"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray">No border</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="none">border-before-style="none"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="hidden">border-before-style="hidden"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="dotted">border-before-style="dotted"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="dashed">border-before-style="dashed"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="solid">border-before-style="solid"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="double">border-before-style="double"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="groove">border-before-style="groove"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="ridge">border-before-style="ridge"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="inset">border-before-style="inset"</fo:block>
      <fo:block space-before="12pt" color="yellow" background-color="gray" border-before-width="20pt" border-before-style="outset">border-before-style="outset"</fo:block>
    </fo:flow>
  </fo:page-sequence>
</fo:root>
