<fo:root xmlns:fo="http://www.w3.org/1999/XSL/Format">
  <fo:layout-master-set>
    <fo:simple-page-master
      master-name="first"
      margin-right="1in"
      margin-left="1in"
      margin-bottom="1in"
      margin-top="1in"
      page-width="8in"
      page-height="11in">
      <fo:region-body></fo:region-body>
    </fo:simple-page-master>
  </fo:layout-master-set>
  <fo:page-sequence
    master-reference="first">
    <fo:flow flow-name="xsl-region-body" font-size="20pt">
      <fo:block>Test border-after-style property.  All tests with border-after-width="20pt", space-after="12pt"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray">No border</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="none">border-after-style="none"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="hidden">border-after-style="hidden"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="dotted">border-after-style="dotted"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="dashed">border-after-style="dashed"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="solid">border-after-style="solid"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="double">border-after-style="double"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="groove">border-after-style="groove"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="ridge">border-after-style="ridge"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="inset">border-after-style="inset"</fo:block>
      <fo:block space-after="12pt" color="yellow" background-color="gray" border-after-width="20pt" border-after-style="outset">border-after-style="outset"</fo:block>
    </fo:flow>
  </fo:page-sequence>
</fo:root>
